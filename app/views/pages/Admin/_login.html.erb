<body class="bg-white-200 flex justify-center items-center h-screen">
    <div class="flex flex-col items-center">
        <h1 class="font-bold text-[5vh] p-5">School Communication And Assessment System</h1>
        <div class="border-2 border-solid border-black-400 shadow-lg bg-white w-96 rounded-lg">
            <h1 class="text-green-800 font-bold mt-5 text-center">Admin Login</h1>
            <form class="flex flex-col items-center" action="<%= admin_log_path %>" method="post">
                <div class="p-3">
                    <label class="text-green-800 font-bold" for="email">Email:</label>
                    <br>
                    <input class="w-full border-2 border-solid border-gray-300 rounded-md p-2" type="email" name="email" id="email" required>
                    <br>
                </div>
                <div class="pb-3">
                    <label class="text-green-800 font-bold" for="password">Password:</label>
                    <br>
                    <input class="w-full border-2 border-solid border-gray-300 rounded-md p-2" type="password" name="password" id="password" required>
                    <br>
                </div>
                <div>
                    <input class="border-2 border-solid border-black-500 text-white bg-green-500 font-bold m-5 text-lg p-2" type="submit" value="Login">
                </div>
                <!-- CSRF token -->
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <!-- Add a hidden field for account type -->
                <input type="hidden" name="account_type" value="admin">
            </form>
        </div>
    </div>
</body>